public class Conditions {

	private int a = 4;
	private int b = 5;
	
	public static void main(String[] args) {
		Conditions conditions = new Conditions();
		//onditions.forConditions();
		//conditions.printConditions();
		//conditions.whileConditions();
		//conditions.doWhileConditions();	
		//conditions.switchConditions();
		//conditions.statementStringConditions();
